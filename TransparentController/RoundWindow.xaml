<Window x:Class="TransparentController.RoundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RoundWindow" Height="300" Width="300" AllowsTransparency="True" Background="Transparent" WindowStyle="None">
    <Canvas Width="400" Height="400" Name="RootLayout" >
        <Ellipse Height="80" Width="80">
            <Ellipse.Fill>
                <VisualBrush TileMode="None">
                    <VisualBrush.Visual>
                        <MediaElement Source="myMovie.wmv" />
                    </VisualBrush.Visual>
                </VisualBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Canvas>
</Window>
