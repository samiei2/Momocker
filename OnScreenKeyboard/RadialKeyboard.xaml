<Window x:Class="OnScreenKeyboard.RadialKeyboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RadialKeyboard" Height="300" Width="300"
        AllowsTransparency="True" WindowStyle="None" Topmost="True">
    <Window.Background>
        <SolidColorBrush Opacity="0.3" Color="White"/>
    </Window.Background>
    <Grid Name="grid">
        <Button Name="sth" Content="Button" IsHitTestVisible="True" HorizontalAlignment="Left" Margin="70,85,0,0" VerticalAlignment="Top" Width="130" Height="79" MouseEnter="sth_MouseEnter" MouseLeave="sth_MouseLeave"/>
        <Label Name="lbl" Content="Label" HorizontalAlignment="Left" Margin="132,233,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
